/* pages/home/home.wxss */
@import '/assets/libs/icon.wxss';
pages{
  height: 100%;
}
.scroll-nav{
  height: 100%;
}
/* 假装搜索 */
  .home-select{
    width: 690rpx;
    height: 68rpx;
    line-height: 68rpx;
    background-color: #F6F7F9;
    font-size: 24rpx;
    color: #C6C7C9;
    margin: 0 auto;
    text-align: center;
  }
  .icon-serch{
    margin-right: 10rpx;
    position: absolute;
    top: 14rpx;
    left: 200rpx;
  }
/* 分类导航 */
  .home-nav{
    font-size: 28rpx; 
    height: 118rpx;
    overflow: hidden;
  }
  .homenavtext{
    line-height: 90rpx;
    height: 90rpx;
    display: inline-block;
    color: #989898;
    font-size: 32rpx;
  }
/* 轮播图 */
  .slide-image{
    width: 680rpx;
    height: 300rpx;
  }
  swiper-item{
    text-align: center;
  }
/* home-four */
  .home-four{
    height: 180rpx;
    display: flex;
    justify-content: space-around;
    text-align: center;  
  }
  .four image{
    height: 150rpx;
    width: 190rpx;
    float: left;
  }
/* wrap */
  .wrap{
    background-color: #F0F4F7;
    height: 1400rpx;
    padding-top: 15rpx;  
  }
  .img-four{
    width: 100%;
    height: 420rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    background-color: white;
  }
  .img-four-size{
    width: 370rpx;
    height: 200rpx;
  }
/* 新品上架 */
  .new-things{
    background-color: white;
    height: 500rpx;
  }
  .new-things-title-img{
    width: 750rpx;
    height: 100rpx;
  }
  .new-things-wrap{
    width: 90%;
    margin: 0 auto;
    margin-top: 30rpx;  
    height: 400rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .new-things-three-img{
    width: 210rpx;
    height: 185rpx;
  }
  .new-things-three{
    display: flex;
    flex-direction: column;
  }
  .new-ctitle{
    font-size: 22rpx;
    width: 180rpx;
    height: 70rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #999999;
  }
  .new-price{
    font-size: 26rpx;
    font-weight: bold;
    color: #202020;
  }
/* 美食控 */
  .meishikong{
    background-color: white;
    margin-top: 15rpx;
  }
  .msk-title-img{
    width: 100%;
    height: 280rpx;
  }
  .msk-wrap{
    width: 92%;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .msk-things{
    display: flex;
    flex-direction: column;
    width: 330rpx;
  }
  .msk-img{
    width: 320rpx;
    height:300rpx;
  }
  .msk-title{
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #212121;
  }
  .msk-ctitle{
    margin-top: 8rpx;
    font-size: 22rpx;
    height: 62rpx;
    color: #989898;
  }
  .msk-price{
    font-size: 26rpx;
    font-weight: bold;
    color: #141414;
  }