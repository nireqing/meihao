/* pages/mine/mine.wxss */
@import '/assets/libs/icon.wxss';

/* 未登录 */
.weidenglu{
  width: 100%;
  height: 260rpx;
}
.weidenglu-wrap{
  display: flex;
  flex-direction: column;
  text-align: center;
}
.weidenglu-img{
  margin: 0 auto;
  width: 200rpx;
  height: 200rpx;
}
.weidenglu-text{
  border: none;
  color: #1B1B1B;
  margin-top: 10rpx;
  font-size: 30rpx;
  text-align: center;
}
.denglu-button{
  background-color:white;
  border: none;
}

/* 我的五个icon */
.mine-five{
  margin-top: 22rpx;
  margin-bottom: 10rpx;
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: space-around;
  text-align: center;
}
.mine-one{
  height: 130rpx;
  display: flex;
  flex-direction: column;
}
.icon-icon{
  font-size: 46rpx;
  height: 66rpx;
  color: #242424;
}
.mine-one-text{
  font-size: 24rpx;
  color: #1E1E1E;
}
/* lists */
.lists{
  height: 100rpx;
  width: 90%;
  margin: 0 auto;
  border-bottom: 1rpx solid #EDEDED;
}
.lists-text{
  float: left;
  font-size: 30rpx;
  line-height: 100rpx;
  color: #222222;
}
.lists-icon{
  float: right;
  line-height: 100rpx;
  font-size: 30rpx;
}