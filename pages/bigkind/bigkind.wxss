/* pages/bigkind/bigkind.wxss */
@import '/assets/libs/icon.wxss';
/* 假装搜索 */
  .home-select{
    width: 690rpx;
    height: 68rpx;
    line-height: 68rpx;
    background-color: #F6F7F9;
    font-size: 24rpx;
    color: #C6C7C9;
    margin: 0 auto;
    text-align: center;
  }
  .icon-serch{
    margin-right: 10rpx;
    position: absolute;
    top: 14rpx;
    left: 200rpx;
  }
/* 分类导航 */
  .home-nav{
    font-size: 28rpx; 
    height: 118rpx;
    overflow: hidden;
  }
  .homenavtext{
    line-height: 90rpx;
    height: 90rpx;
    display: inline-block;
    color: #989898;
    font-size: 32rpx;
  }
/* kind-content */
  .kind-wrap{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
  }
    .new-things-three-img{
      margin-top: 5rpx;
      width: 320rpx;
      height:300rpx;
    }
    .new-things-three{
      display: flex;
      flex-direction: column;
    }
    .new-title{
      font-size: 28rpx;
      width: 280rpx;
      color: #232323;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
    .new-cttle{
      font-size: 24rpx;
      height: 77rpx;
      width: 280rpx;
      color: #959595;
    }
    .new-price{
      font-size: 26rpx;
      font-weight: bold;
      color: #202020;
    }
/* kindbanner */
.kindbanner-wrap{
  width: 100%;
  height: 350rpx;
  margin-bottom: 20rpx;
}
.kindbanner-wrap image{
  width: 100%;
  height: 100%;
}
/* 顶部两个跳转按钮 */
  .wrap-two{
    width: 100%;
    height: 150rpx;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
  }
  .tohome{
    float: left;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    bottom: 60rpx;
    left: 20rpx;
    position: fixed;
    z-index: 20;
    background-color: #ccc;  
  }
  .icon-home{
    color: white;
    font-size: 48rpx;
    margin-left: 16rpx;
  }
  .tocart{
    float: right;
    background-color: #ccc;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    bottom: 60rpx;
    right: 20rpx;
    position: fixed;
    z-index: 20;  
  }
  .icon-carticon{
    color: white;
    font-size: 48rpx;
    margin-left: 14rpx;
  }