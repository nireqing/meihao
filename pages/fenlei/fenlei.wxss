/* pages/fenlei/fenlei.wxss */

@import '/assets/libs/icon.wxss';

/* 打底 */
.big-wrap{
  background-color: #F2F3F7;
}
/* 假装搜索 */
.home-select{
  width: 690rpx;
  height: 68rpx;
  line-height: 68rpx;
  background-color: #F6F7F9;
  font-size: 24rpx;
  color: #C6C7C9;
  margin: 0 auto;
  text-align: center;
}
.icon-serch{
  margin-right: 10rpx;
  position: absolute;
  top: 14rpx;
  left: 200rpx;
}
/* 分类 */
  /* title */
    .fenlei-wrap{
      width: 100%;
      height: 400rpx;
      background-color: white;
      margin-bottom: 20rpx;
    }
    .fenlei-title{
      width: 100%;
      height: 100rpx;
    }
    .fenlei-title-text{
      line-height: 100rpx;
      float: left;
      margin-left: 20rpx;
      font-size: 35rpx;
    }
    .fenlei-title-right{
      float: right;
      line-height: 100rpx;
      color: #9A9A9A;
      font-size: 25rpx;
      margin-right: 20rpx;
    }
    .more-icon{
      font-size: 20rpx;
      margin-left: 10rpx;
    }
  /* content */
    .fenlei-contents{
      width: 100%;
      height: 240rpx;
      overflow-y: hidden;
    }
    .fl-content{
      float: left;
      display: flex;
      flex-direction: column;
      width: 170rpx;      
    }
    .fl-content image{
      margin-top: 20rpx;
      width: 170rpx;
      height: 170rpx;
    }
    .fl-text{
      font-size: 28rpx;
      line-height: 80rpx;
      text-align: center;
    }